  </div>
    <div class="jumbotron col-4" style="background: #feebcb; margin-top: 50px; margin-left: 100px;">
      <form class="" action="/shop/stock" method="post">
        <h4><b>추가 제작</b></h4><hr><br>
        <div class="form-inline">
          <label for="">상품명</label>&nbsp;&nbsp;&nbsp;
          <select class="form-control" name="selectStockProd" id="selectStockProd" style="width: 250px;">
            <%
            for(var i=0;i<prodata.length;i++){
            %>
            <option value="<%=prodata[i].productName%>,<%=prodata[i].productNum%>"><%=prodata[i].productName%></option>
            <%
            }
            %>
          </select>
        </div><br>
        <div class="form-inline">
          <label for="">날짜</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input class="form-control" type="date" name="stockDate" value="">
        </div><br>
        <div class="form-inline">
          <label for="">수량</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input class="form-control" type="text" name="stockQuantity" value="" style="width: 150px;">
        </div><br>
        <div class="form-inline">
            <input type="submit" class="btn" value="등록하기" style="background: #ffa07a; width: 100px; cursor: pointer; margin-left: 60px;">
            <input type="cancel" class="btn" value="취소하기" style="background: #ffa07a; width: 100px; cursor: pointer; margin-left: 40px;margin-right: 60px;" onClick="location.href='/shop/stock/1'">
        </div>
      </form>
