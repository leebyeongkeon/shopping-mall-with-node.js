      if(Detail[i].faqNum == id){ %>

    <h2>FAQ 수정</h2>
    <hr>
    <form action="/adminbulletin/faq/update?id=<%=id%>" name="infoAdd" onsubmit="return validate()" method="POST" enctype="text/html" class="was-validated">
