<div class="col-sm-10">
  <div class="openshop container">
    <h2>문의 등록</h2>
    <hr>
    <form action="/product/enquiry/new" name="infoAdd" onsubmit="return validate()" method="POST" enctype="text/html" class="was-validated">
      <!-- enctype="text/html" -->
        <!-- 공지번호를 채울경우 해당 번호로 DB에 공지가 삽입 아니면 autoincrement -->
        <div class="form-group">
          <label for="category">카테고리</label>
          <select class="os form-control" id="category" name="category">
             <option value="2">상점에</option>
             <option value="1">쇼핑몰에</option>

           </select>
          <div class="valid-feedback">Valid.</div>
          <div class="invalid-feedback"></div>
        </div>
        <div class="form-group">
          <label for="product">상품명</label>
          <input type="text" class="os form-control" id="product" name="productName" value="<%= list[0].productName %>" readonly>
        </div>
        <div class="form-group">
          <label for=shop>상점명</label>
          <input type="text" class="os form-control" id="shop" name="shopName" value="<%=list[0].shopName%>" readonly>
          <input type="hidden" value="<%=list[0].shopNum%>" name="shopNum">
          <input type="hidden" value="<%=list[0].productNum%>" name="prodNum">

        </div>
         <div class="form-group">
           <label for="title">제목</label>
           <input type="text" class="os form-control" id="title" name="title" placeholder="제목을 입력하세요." required>
           <div class="valid-feedback">Valid.</div>
           <div class="invalid-feedback">Please fill out this field.</div>
         </div>
         <div class="form-group">
           <label for="intro">내용</label>
           <input type="text" class="intro form-control" id="intro" name="intro" placeholder="문의 내용" required>
           <div class="valid-feedback">Valid.</div>
           <div class="invalid-feedback"></div>
         </div>
         <button type="submit" class="btn btn-primary">등록</button>
     </form>
  </div>
</div>
