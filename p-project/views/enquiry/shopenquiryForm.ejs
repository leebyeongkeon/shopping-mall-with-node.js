<!DOCTYPE html>
    <script language="javascript">
      function validate() {
         let item = document.getElementById("title").value;
         if (item == '') {
           alert("공지 제목이 입력되지 않았습니다, 꼭 입력하세요");
           return false;
         }
         return true;
      }

      $(document).ready(function() {
        bsCustomFileInput.init();
      })
    </script>
<div class="row">
  <div class="col-sm-2">
    <div class="sidebar container p-3 my-3 border">
    <ul class="nav flex-column">
      <h3>1:1문의</h3>
