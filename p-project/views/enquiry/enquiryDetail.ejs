     <button type="<%=buttonType%>" onclick="<%=onclick2%>" class="btn btn-danger"><%=button2%></button>
     <%=admin%></form>
   <button type="<%=buttonType%>" onclick="location.href='/service/mallenquiry/update?id=<%=id%>'" class="btn btn-primary"
     style="display: inline; float:right;"><%=button1%></button>

   <button type="button" onclick="location.href='/service/mallenquiry/list/1'" class="btn btn-primary">목록</button>
   </div>
