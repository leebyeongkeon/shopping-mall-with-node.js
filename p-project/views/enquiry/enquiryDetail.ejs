<!DOCTYPE html>
<div class="container">
  <% for(var i = 0; i<Detail.length; i++) {
    if(Detail[i].enquiryNum == id){ %>
  <div class="faqtitle">
    <strong><h2 style="display:inline;"><%= Detail[i].enquiryTitle %></h2></strong>
      <strong><h5 style="display:inline;"> |  1:1문의</h5></strong>
    <h7 style="float:right;">작성일자: <%=Detail[i].date%></h7>
  </div>
  <hr>
  <div class="ment">
    <div class="container" style="height:150px">
      <p><%= Detail[i].writerMent %></p>
    </div>
  </div>

   <% }} %>
<% for(var i =0 ; i<comment.length; i++){ %>
   <div class="reply" style="margin-bottom: 30px; margin-top: 50px;height:100px;">
     <img src="/images/admin.png"  style="height:25px;"alt="">
