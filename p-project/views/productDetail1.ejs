                    <input type="text" id="datepicker" name="datepicker" class="form-control" style="width: 110px;"/>&nbsp;
                    <%
                    var dates='';
                    var amount='';
                    for(var i=0;i<stockData.length;i++){
                      dates+=stockData[i].stockDATE.toString()+',';
                      amount+=stockData[i].stockAmount.toString()+',';
                    }
                    %>
                    <input type="hidden" id="hiddendate" value="<%=dates%>"/>
                    <input type="hidden" id="hiddenamount" value="<%=amount%>"/>
                    <!--hidden type response받은 데이터를 저장해두고 스크립트 코드에서 사용하기 위해-->

                    <input type="hidden" id="hiddenProdName" name="hiddenProdName" value="<%=prodata[0].productName%>"/>
