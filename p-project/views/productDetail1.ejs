                    <input type="hidden" id="hiddenMinPrice" name="hiddenMinPrice" value="<%=prodata[0].minPrice%>"/>
                    <input type="hidden" id="hiddenImg" name="hiddenImg" value="<%=prodata[0].productImg%>"/>
                    <input type="hidden" id="hiddenNum" name="hiddenProdNum" value="<%=prodata[0].productNum%>"/>
